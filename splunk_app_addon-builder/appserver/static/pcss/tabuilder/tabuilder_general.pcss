html {
    height: 100%;
}
body {
    background-color: $tabuilderWhite;
    height: 100%;
}
.ta-modal-dialog {
    .paragraph {
        line-height: 20px;
    }
}
.table-container {
    width:100%;
    margin-bottom: 16px;
    position: relative;
    table.table {
        margin-bottom: 0;
        thead:first-child tr:first-child th {
            border-top: solid 1px $tabuilderGroupBorderColor;
        }
        thead th{
            /*font-weight: bold;*/
            background-image: linear-gradient(to bottom, #f8f8f8, #eeeeee);
            border: solid 1px $tabuilderGroupBorderColor;
        }
        tr {
            &:nth-child(even) {
                background: #f5f5f5;
            }
            td {
                border-top: 1px solid $tabuilderGroupBorderColor;
                border-bottom: 1px solid $tabuilderGroupBorderColor;
            }
        }
        tbody tr:hover {
            background: #ebebeb !important;
        }
    }
    div.table-loading {
        width: 100%;
        text-align: center;
        line-height: 30px;
        color: #999;
    }
}
.pagination-container-top {
    text-align: right;
}
.pagination-container-bottom {
    text-align: right;
    padding-top: 4px;
    height: 26px;
}
.editable-table {
    margin: 10px 0;
    th:first-child,
    td:first-child {
        padding-left: 5px;
    }
    thead th {
        height: auto;
        font-weight: bold;
    }
    tbody td {
        padding: 5px 10px;
        height: 25px;
    }
    input {
        margin-bottom: 0;
    }
    .tbTable-editable-data {
        text-align: center !important;
        vertical-align: middle !important;
    }
    .action-column {
        width: 28px !important;
        padding: 5px 0 !important;
        text-align: right !important;
    }
    .tbTable-icon {
        cursor: pointer;
        position: relative;
        top: 3px;
        padding: 0 4px;
        line-height: 24px;
        font-size: 18px;
        color: $splunkGreen;
        border: 1px solid $splunkGreen;
        border-radius: 18px;
    }
}

item {
    .submit-dialog,
    .delete-&,
    .update-&,
    .enable-&,
    .disable-& {
        cursor: pointer;
    }
}
