/*Add missing bootstrap css definition*/
.popover {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1010;
    display: none;
    max-width: 276px;
    padding: 1px;
    text-align: left;
    white-space: normal;
    background-color: $tabuilderWhite;
    border: 1px solid #ccc;
    border: 1px solid rgba(0, 0, 0, 0.2);
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
    -webkit-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    -moz-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    -webkit-background-clip: padding-box;
    -moz-background-clip: padding;
    background-clip: padding-box;
}
.popover.top {
    margin-top: -10px;
}
.popover.right {
    margin-left: 10px;
}
.popover.bottom {
    margin-top: 10px;
}
.popover.left {
    margin-left: -10px;
}
.popover-title {
    padding: 8px 14px;
    margin: 0;
    font-size: 14px;
    font-weight: normal;
    line-height: 18px;
    background-color: #f7f7f7;
    border-bottom: 1px solid #ebebeb;
    -webkit-border-radius: 5px 5px 0 0;
    -moz-border-radius: 5px 5px 0 0;
    border-radius: 5px 5px 0 0;
}
.popover-title:empty {
    display: none;
}
.popover-content {
    padding: 9px 14px;
}
.popover .arrow,
.popover .arrow::after {
    position: absolute;
    display: block;
    width: 0;
    height: 0;
    border-color: transparent;
    border-style: solid;
}
.popover .arrow {
    border-width: 11px;
}
.popover .arrow::after {
    border-width: 10px;
    content: "";
}
.popover.top .arrow {
    bottom: -11px;
    left: 50%;
    margin-left: -11px;
    border-top-color: #999;
    border-top-color: rgba(0, 0, 0, 0.25);
    border-bottom-width: 0;
}
.popover.top .arrow::after {
    bottom: 1px;
    margin-left: -10px;
    border-top-color: $tabuilderWhite;
    border-bottom-width: 0;
}
.popover.right .arrow {
    top: 50%;
    left: -11px;
    margin-top: -11px;
    border-right-color: #999;
    border-right-color: rgba(0, 0, 0, 0.25);
    border-left-width: 0;
}
.popover.right .arrow::after {
    bottom: -10px;
    left: 1px;
    border-right-color: $tabuilderWhite;
    border-left-width: 0;
}
.popover.bottom .arrow {
    top: -11px;
    left: 50%;
    margin-left: -11px;
    border-bottom-color: #999;
    border-bottom-color: rgba(0, 0, 0, 0.25);
    border-top-width: 0;
}
.popover.bottom .arrow::after {
    top: 1px;
    margin-left: -10px;
    border-bottom-color: $tabuilderWhite;
    border-top-width: 0;
}
.popover.left .arrow {
    top: 50%;
    right: -11px;
    margin-top: -11px;
    border-left-color: #999;
    border-left-color: rgba(0, 0, 0, 0.25);
    border-right-width: 0;
}
.popover.left .arrow::after {
    right: 1px;
    bottom: -10px;
    border-left-color: $tabuilderWhite;
    border-right-width: 0;
}
/* Customization of bootstrap popover */
.popover.popover-edit .popover-content {
    width: 250px;
    float: left;
}
.popover.popover-edit .popover-content .error-message {
    color: $tabuilderErrorColor;
}
.popover.popover-edit .popover-content input {
    display: inline-block;
    margin-bottom: 0;
    vertical-align: middle;
    background-color: $tabuilderWhite;
    border: 1px solid #ccc;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
    -moz-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
    -webkit-transition: border linear 0.2s, box-shadow linear 0.2s;
    -moz-transition: border linear 0.2s, box-shadow linear 0.2s;
    -o-transition: border linear 0.2s, box-shadow linear 0.2s;
    transition: border linear 0.2s, box-shadow linear 0.2s;
    height: 16px;
    padding: 4px 6px;
    font-size: 12px;
    line-height: 16px;
    color: #555;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    width: calc(100% - 110px);
}
.popover.popover-edit .popover-content .btn.icon-check {
    margin-right: 8px;
}
/* shake effect */
@-webkit-keyframes shake {
    0%,
    100% {
        -webkit-transform: translate3d(0,0,0);
        transform: translate3d(0,0,0);
    }
    10%,
    30%,
    50%,
    70%,
    90% {
        -webkit-transform: translate3d(-3px,0,0);
        transform: translate3d(-3px,0,0);
    }
    20%,
    40%,
    60%,
    80% {
        -webkit-transform: translate3d(3px,0,0);
        transform: translate3d(3px,0,0);
    }
}
@keyframes shake {
    0%,
    100% {
        -webkit-transform: translate3d(0,0,0);
        transform: translate3d(0,0,0);
    }
    10%,
    30%,
    50%,
    70%,
    90% {
        -webkit-transform: translate3d(-3px,0,0);
        transform: translate3d(-3px,0,0);
    }
    20%,
    40%,
    60%,
    80% {
        -webkit-transform: translate3d(3px,0,0);
        transform: translate3d(3px,0,0);
    }
}
.shake {
    -webkit-animation: shake 0.8s;
    animation: shake 0.8s;
}
a[disabled] {
    color: #999 !important;
    cursor: not-allowed;
    text-decoration: none;
}
.select2-container-disabled a {
    cursor: not-allowed !important;
}
.btn-group {
    position: relative;
    display: inline-block;
    font-size: 0;
    vertical-align: middle;
    white-space: nowrap;
    user-select: none;
}
.btn-group-radio-input-wrapper {
    display: inline-block;
    input{
        display: inline-block;
        margin-bottom: 0;
        margin-left: 5px;
        padding: 4px 10px;
        width: 120px;
    }
}
.ta-accordion-group {
    border: 0;
    border-bottom: 1px solid #cccccc;
    border-radius: 0;
    margin-bottom: 0;
    .ta-accordion-heading {
        position: relative;
        border: 0;
        border-radius: 0;
        padding: 6px 15px 6px 20px;
        cursor: pointer;
        &[disabled] {
            cursor: not-allowed;
            background-color: #f5f5f5;
            a {
                color: #999;
                cursor: not-allowed;
            }
            &:hover,
            &:focus {
                background-color: #f5f5f5;
            }
        }
        &:hover,
        &:focus {
            background-color: rgba(0, 0, 0, 0.05);
        }
        .ta-accordion-toggle {
            color: $tabuilderFontBlack;
            padding: 0;
            &:hover,
            &:focus {
                text-decoration: none;
                background-color: transparent;
                box-shadow: 0 0 0;
            }
        }
        .ta-icon-accordion-toggle {
            position: absolute;
            left: 8px;
        }
    }
    .ta-accordion-inner {
        padding: 10px 20px 20px;
        border: none;
        position: relative;
    }
}
.control-group {
    margin-bottom: 20px;
    &::before {
        content: "";
        display: table;
        line-height: 0;
    }
    .control-label {
        float: left;
        padding-top: 5px;
        text-align: right;
        word-wrap: break-word;
        word-break: break-all;
    }
}
.tooltip-inner {
    overflow-wrap: break-word;
}
.ta-message-container {
    overflow-wrap: break-word;
}
.ta-help-link-header {
    padding: 20px 20px 0 20px;
    width: calc(100% - 40px);
    min-height: 60px;
    &.no-description {
        min-height: 20px;
    }
    .help-title {
        font-family: Roboto;
        font-size: 18px;
        font-weight: 400;
        line-height: 16px;
        color: #3c444d;
    }
    .help-description {
        margin-top:5px;
        font-family: Roboto;
        font-size: 12px;
        font-weight: 400;
        line-height: 14px;
        color: #4a4a4a;
    }
}
.ta-addon-summary-footer {
