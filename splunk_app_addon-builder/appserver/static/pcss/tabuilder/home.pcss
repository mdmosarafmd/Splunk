body {
    background-color: $tabuilderBackgroudGray;
}
abbr{
    cursor: default !important;
    border:0;
}
.ta-sub-view.ta-home-page{
    min-width: 1024px;
    width: 100%;
    background-color: white;
    height: initial;
}
#splunk-header {
    min-width: 1024px;
}
#splunk-header+.ta-nav-bar {
    min-width: 1024px;
}
.homeContainer {
    width: 1325px;
    margin: 0 auto;
    padding: 0 20px;
}
.homeSearch {
    width: 100%;
    margin-top: 10px;
}
.homeFilter {
    width: 100%;
}
.homeFilterContainer {
    margin-top: 10px;
}
.ta_project_icons {
    margin-top: 25px;
}
.icon-container {
    width: calc(100% + 15px);
}
.icon-add {
    width: calc(100% - 6px);
    height: 104px;
    border-style: dashed;
    border-radius: 5px;
    border-color: $tabuilderOrange;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    background-color: $tabuilderBackgroudGray;
    &:hover {
        background-color: $tabuilderWhite;
    }
}
.icon-exist {
    width: 100%;
    height: 110px;
    background-color: $tabuilderWhite;
    border-radius: 5px;
    border-color: $tabuilderWhite;
    border: 0;
    position: relative;
    overflow: hidden;
    &:hover {
        a.ta-project-export,
        a.ta-project-delete,
        a.ta-project-edit {
            display: block;
        }
    }
    a.ta-project-export {
        display: none;
        position: absolute;
        top: 55px;
        right: 5px;
        width: 20px;
        height: 20px;
        background: rgba(0,0,0,0.6);
        color: $tabuilderWhite;
        border-radius: 12px;
        .icon-export {
            font-size: 20px;
            position: absolute;
            top: 2px;
            left: 4px;
        }
        &:hover {
            background: rgba(0,0,0,0.8);
        }
    }
    a.ta-project-delete {
        display: none;
        position: absolute;
        top: 5px;
        right: 5px;
        width: 20px;
        height: 20px;
        background: rgba(0,0,0,0.6);
        color: $tabuilderWhite;
        border-radius: 12px;
        .icon-x {
            font-size: 20px;
            position: absolute;
            top: 2px;
            left: 4px;
        }
        &:hover {
            background: rgba(0,0,0,0.8);
        }
    }
    a.ta-project-edit {
        display: none;
        position: absolute;
        top: 30px;
        right: 5px;
        width: 20px;
        height: 20px;
        background: rgba(0,0,0,0.6);
        color: $tabuilderWhite;
        border-radius: 12px;
        .icon-pencil {
            font-size: 16px;
            position: absolute;
            top: 2px;
            left: 5px;
        }
        &:hover {
            background: rgba(0,0,0,0.8);
        }
    }
}

.ta-project-export-link {
    display: none;
}

.cell-icon {
    float: left;
    width: 320px;
    margin-right: 15px;
    margin-bottom: 25px;
    cursor: pointer;
}
.ta-category,
.projects-by-builder,
.projects-by-user {
    clear: both;
}
.ta-row {
    margin-bottom: 25px;
}
.icon-add > .icon-left {
    position: absolute;
    left: 18px;
    top: 18px;
}
.icon-add > .icon-right {
    position: absolute;
    left: 100px;
    top: 0;
}
.icon-exist > .icon-left {
    position: absolute;
    left: 0;
    top: 0;
    overflow: hidden;
    border-radius: 5px 0 0 5px;
}
.icon-exist > .icon-right {
    position: absolute;
    left: 120px;
    top: 0;
    padding: 5px 0;
    width: 195px;
    .ta-details-row{
        width:100%;
        overflow:hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
}
.icon-img {
    height: 110px;
    width: 110px;
}
.homeCreateNewLink {
    margin-top: 40px;
    color: $tabuilderOrange;
    margin-left: 30px;
    font-size: 14px;
}
.ta-icon {
    margin-right: 5px;
    color: $tabuilderOrange;
}
.ta-category {
    font-size: 14px;
    font-family: Roboto !important;
    font-weight: bold;
    color: #959595;
    margin-top: 15px;

    .info {
        font-weight: normal;
        color: green;
        margin-left: 20px;
    }
}
.span4 {
    .control-label {
        line-height: 26px;
    }
}

.home-control-group {
    padding-left: 20px;
    background: #eee;
    padding-top: 10px;
  .mode-change {
    width: 200px;
  }
  .action-button {
    button {
        position:relative;
        float:right;
      margin: 10px;
    }
  }
}

.home-filter {
  display:inline-block;
  margin: 10px 5px 10px 20px;
}

.home-tab{
    min-width:1024px;
    margin-top:20px;
    background-color:white;
    min-height: 590px;
}

.home-paginator{
    padding:10px;
    .paginator-right{
        float:right;
    }
}
