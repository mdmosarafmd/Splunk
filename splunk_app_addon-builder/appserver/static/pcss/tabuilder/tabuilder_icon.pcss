.ta-icon-large {
    height: 180px;
    width: 180px;
    background-position: 30px 30px, center;
    background-repeat: no-repeat;
    text-align: center;
    display: inline-block;
    user-select: none;
    &:hover,
    &.isSelected {
        background-color: $tabuilderOrange;
    }
}

.ta-download-disabled:hover .ta-icon-large{
    background-color: transparent;
}

.ta-download-disabled.ta-download-enabled {
    .ta-icon-large:hover{
        background-color: #ecf6e4;
    }
    .ta-download-link-title:hover ~ .ta-download-link-icon .ta-icon-large,
    .ta-download-link-description:hover + .ta-download-link-icon .ta-icon-large{
        background-color: #ecf6e4;
    }
}

.ta-icon-add-data {
    cursor: pointer;
    background-image: url('../img/icon/icon-add-data.svg');
    &:hover,
    &.isSelected {
        background-color: #ecf6e4;
    }
}

