}

.ta-icon-download-disabled {
    cursor: not-allowed;
    background-image: url('../img/icon/icon-download-gray.svg');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    width: 100%;
    height: 100%;
}

.ta-icon-download {
    cursor: pointer;
    background-image: url('../img/icon/icon-download.svg');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    width: 100%;
    height: 100%;
    &:hover,
    &:focus {
        background-color: #ecf6e4;
    }
}


