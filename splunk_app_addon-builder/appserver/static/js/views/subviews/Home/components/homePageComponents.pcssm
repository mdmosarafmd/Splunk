.loadingStyle{
    width: 55%;
    position: absolute;
    min-height: 348px;
    background-color: rgba(255,255,255,1);
    padding-left: 45%;
    padding-top: 1%;
    z-index: 2;
    color: #999;
}

.loadingStyleModal{
    margin-top: 10px;
    text-align: center;
}

.loadingModal{
    width:500px;
    height:100px;
    border-radius:6px;
}

.home-control-group {
  padding : 10px 10px 0 10px;
  .mode-change {
    width: 200px;
  }
  .action-button {
    position:relative;
    float:right;
    margin: 10px;
  }
}
.actionTooltip {
  display:inline-block;
  position:relative;
  float:right;
  margin: 10px;
}

.buttonAndSearchGroup{
    width: calc(100% - 40px);
    display: flex;
    justify-content: space-between;
    margin: 20px;
}
.searchGroup{
    display: flex;
    align-items: center;
}
.home-filter {
  display:inline-block;
}
